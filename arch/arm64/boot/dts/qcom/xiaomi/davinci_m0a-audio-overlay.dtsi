#include "davinci-audio-overlay.dtsi"

&qupv3_se4_i2c {
	tfa98xx@34 {
		reset-gpio = <&tlmm 12 0>;
	};
};

/* change m0a smartpa GPIO rst pin */
&smartpa_enable_active {
	/* active state */
	mux {
		/* GPIO 12 rst pin */
		pins = "gpio12";
		function = "gpio";
	};
	config {
		pins = "gpio12";
		drive-strength = <2>;
		bias-disable;
		bias-pull-down;
		output-low;
	};
};

&smartpa_enable_suspend {
	/* sleep state */
	mux {
		/* GPIO 12 rst pin */
		pins = "gpio12";
		function = "gpio";
	};
	config {
		pins = "gpio12";
		drive-strength = <2>;
		bias-disable;
		bias-pull-down;
		output-low;
	};
};
